{% extends "/templates/default_no_banner.twig" %}

{#TO VIEW INFO PASSED TO THE VIEW#}
{#{{ signupErrors | json_encode }}#}

{% block content %}
<div class="container">
	<div class="row">
		<div class="col-lg-12" style="background-color: #000000">
			<div style="background-color: #000000" align="center"><img src="{{ base_url() }}/images/logo/service-logo-.png" alt="service-logo"></div>
			<h2 style="margin-bottom: 50px;" align="center">SIGN IN</h2>
		</div>
	<!-- /.row -->
	
	<!----------------breadCrumbs---------------->
	{% include 'templates/partials/breadcrumbs.twig' %}
	<!----------------/breadcrumbs---------------->
	<!----------------flashMessage---------------->
	{% include 'templates/partials/flash.twig' %}
	<!----------------/.flashMessage---------------->
	</div>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<form action="{{ path_for('auth.signin') }}" method="post" name="signup-form">
				<div class="form-group{{ formErrors.identification ? ' has-error' : '' }}">
					<label for="identification">Username Or Email</label>
					<input type="text" name="identification" id="identification" placeholder="Username / Email" class="form-control">
				</div>
				{% if formErrors.identification %}
					<span class="help-block">{{ formErrors.identification | first }}</span>
				{% endif %}
				<div class="form-group{{ formErrors.password ? ' has-error' : '' }}">
					<label for="password">Password</label>
					<input type="password" name="password" id="password" placeholder="Password" class="form-control">
				</div>
				{% if formErrors.password %}
					<span class="help-block">{{ formErrors.password | first }}</span>
				{% endif %}
				<button type="submit" class="btn home-news-letter">Sign In</button>
				
				{#SET THIS UP IN THE CSRFVIEWMIDDLEWARE SECTION FOR THE KEY#}
				{{ csrf.field | raw }}
			</form>
		</div>
	</div>
	<p>&nbsp;</p>
</div>
	
	<!----------------NEWSLETTER SECTION---------------->
	<img  style="bottom: auto; background-color: #143887;" class="img-responsive" src="{{ base_url() }}/images/divider/hosting-divider.png" alt="divider">
	<div class="container-fluid" style="min-height: 260px; background-color: #143887">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div align="center"><img src="{{ base_url() }}/images/logo/service-logo-.png" alt="service-logo"></div>
					<h2 style="margin-bottom: 50px;" align="center">NEWS LETTER</h2>
					<p style="text-align: center">Signup for our newsletter and get updates, and special offers in your inbox.</p>
				</div>
				<form action="{{ path_for('home') }}" method="post" name="signup-form">
					<div class="col-md-4 col-sm-4 col-md-offset-1" style="padding-top: 15px;">
						<div class="form-group{{ formErrors.name ? ' has-error' : '' }}">
							<div class="controls">
								<input type="text" placeholder="Name and Surname" class="form-control" id="name" name="name" data-validation-required-message="Please enter your name.">
								{% if formErrors.name %}
									<span class="help-block">{{ formErrors.name | first }}</span>
								{% endif %}
							</div>
						</div>
					</div>
					<div class="col-md-4 col-sm-4" style="padding-top: 15px;">
						<div class="form-group{{ formErrors.email ? ' has-error' : '' }}">
							<div class="controls">
								<input type="email" placeholder="Email" class="form-control" id="email" name="email"  data-validation-required-message="Please enter your email address.">
								{% if formErrors.email %}
									<span class="help-block">{{ formErrors.email | first }}</span>
								{% endif %}
							</div>
						</div>
					</div>
					<div class="col-md-2 col-sm-2" style="padding-top: 15px;">
						<button type="submit" class="btn home-news-letter">Join us</button>
						{#SET THIS UP IN THE CSRFVIEWMIDDLEWARE SECTION FOR THE KEY#}
						{{ csrf.field | raw }}
					</div>
				</form>
			</div>
		</div>
		<p>&nbsp;</p>
	</div>
	<!----------------./NEWSLETTER SECTION---------------->
{% endblock %}