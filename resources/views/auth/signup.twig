{% extends "/templates/default_no_banner.twig" %}

{#TO VIEW INFO PASSED TO THE VIEW#}
{#{{ formErrors | json_encode }}#}

{% block content %}
<div class="container">
	<div class="row">
	<div class="col-lg-12" style="background-color: #000000">
		<div style="background-color: #000000" align="center"><img src="{{ base_url() }}/images/logo/service-logo-.png" alt="service-logo"></div>
		<h2 style="margin-bottom: 50px;" align="center">REGISTER</h2>
	</div>
	
	{% include 'templates/partials/breadcrumbs.twig' %}
	
	<!----------------flashMessage---------------->
	{% include 'templates/partials/flash.twig' %}
	<!----------------/.flashMessage---------------->

	<!----------------row registration form---------------->
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			{#{{ formErrors | json_encode }}#}
			<form action="{{ path_for('auth.signup') }}" method="post" name="signup-form">
				<div class="form-group{{ formErrors.first_name ? ' has-error' : '' }}">
					<label for="first_name">Name</label>
					<input type="text" name="first_name" id="first_name" placeholder="Name" class="form-control" value="{{ signUpOld.first_name }}">
					{% if formErrors.first_name %}
						<span class="help-block">{{ formErrors.first_name | first }}</span>
					{% endif %}
				</div>
				<div class="form-group{{ formErrors.surname ? ' has-error' : '' }}">
					<label for="surname">Surname</label>
					<input type="text" name="surname" id="surname" placeholder="Last Name" class="form-control" value="{{ signUpOld.surname }}">
					{% if formErrors.surname %}
						<span class="help-block">{{ formErrors.surname | first }}</span>
					{% endif %}
				</div>
				<div class="form-group{{ formErrors.email ? ' has-error' : '' }}">
					<label for="email">Email</label>
					<input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ signUpOld.email }}">
					{% if formErrors.email %}
						<span class="help-block">{{ formErrors.email | first }}</span>
					{% endif %}
				</div>
				<div class="form-group{{ formErrors.username ? ' has-error' : '' }}">
					<label for="username">Username</label>
					<input type="text" name="username" id="username" placeholder="username" class="form-control" value="{{ signUpOld.username }}">
					{% if formErrors.username %}
						<span class="help-block">{{ formErrors.username | first }}</span>
					{% endif %}
				</div>
				<div class="form-group{{ formErrors.password ? ' has-error' : '' }}">
					<label for="password">Password</label>
					<input type="password" name="password" id="password" placeholder="Password" class="form-control">
					{% if formErrors.password %}
						<span class="help-block">{{ formErrors.password | first }}</span>
					{% endif %}
				</div>
				<div class="form-group{{ formErrors.confirmed_password ? ' has-error' : '' }}">
					<label for="con_pass">Confirm Password</label>
					<input type="password" name="confirmed_password" id="con_pass" placeholder="Confirm Password" class="form-control">
					{% if formErrors.confirmed_password %}
						<span class="help-block">{{ formErrors.confirmed_password | first }}</span>
					{% endif %}
				</div>
				<button type="submit" class="btn home-news-letter">Register</button>
				
				{#SET THIS UP IN THE CSRFVIEWMIDDLEWARE SECTION FOR THE KEY#}
				{{ csrf.field | raw }}
			</form>
		</div>
	</div>
</div>
	<!----------------/registration---------------->
{% endblock %}