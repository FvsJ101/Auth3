{% extends "/templates/default_no_banner.twig" %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-primary">
				<div class="panel-heading">Sign Up</div>
				<div class="panel-body">
					<form action="{{ path_for('auth.signup') }}" method="post" name="signup-form">
						<div class="form-group">
							<label for="first_name">Name</label>
							<input type="text" name="first_name" id="first_name" placeholder="Name" class="form-control">
						</div>
						<div class="form-group">
							<label for="surname">Surname</label>
							<input type="text" name="surname" id="surname" placeholder="Last Name" class="form-control">
						</div>
						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control">
						</div>
						<div class="form-group">
							<label for="username">Username</label>
							<input type="text" name="username" id="username" placeholder="username" class="form-control">
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" name="password" id="password" placeholder="Password" class="form-control">
						</div>
						<div class="form-group">
							<label for="con_pass">Confirm Password</label>
							<input type="password" name="confirmed_password" id="con_pass" placeholder="Confirm Password" class="form-control">
						</div>
						<button type="submit" class="btn btn-primary">Register</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}